<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp"
    android:background="?attr/mainbackground">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/mainbackground">

        <ImageButton
            android:id="@+id/ibLikeUpTextPostItem"
            android:layout_width="20dp"
            android:layout_height="40dp"
            android:layout_below="@id/tvContentTextPostItem"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_weight="1"
            android:background="#00FFFFFF"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/ic_keyboard_arrow_up_black_24dp" />

        <TextView
            android:id="@+id/tvDislikeCounterTextPostItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvContentTextPostItem"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="13dp"
            android:layout_toRightOf="@id/ibLikeDownTextPostItem"
            android:text="0"
            android:textColor="?attr/lichtgreytextcolor"
            app:layout_constraintVertical_bias="0.018" />

        <ImageButton
            android:id="@+id/ibLikeDownTextPostItem"
            android:layout_width="20dp"
            android:layout_height="40dp"
            android:layout_below="@id/tvContentTextPostItem"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@id/tvLikeCounterTextPostItem"
            android:background="#00FFFFFF"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/ic_keyboard_arrow_down_black_24dp" />

        <TextView
            android:id="@+id/tvLikeCounterTextPostItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvContentTextPostItem"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="13dp"
            android:layout_toRightOf="@id/ibLikeUpTextPostItem"
            android:text="0"
            android:textColor="?attr/lichtgreytextcolor" />

        <TextView
            android:id="@+id/tvUsernameTextPostItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="8dp"
            android:layout_weight="1"
            android:text="Username"
            android:textColor="?attr/lichtgreytextcolor"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/tvStreepjeTextPostItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_toRightOf="@id/tvUsernameTextPostItem"
            android:layout_weight="1"
            android:text="  -  "
            android:textColor="?attr/lichtgreytextcolor"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/tvTitleTextPostItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvPostDateTextPostItem"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="7dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="5dp"
            android:layout_weight="1"
            android:text="Content"
            android:textAllCaps="false"
            android:textColor="?attr/maintextcolor"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tvCommentCountTextPostItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvContentTextPostItem"
            android:layout_marginStart="13dp"
            android:layout_marginTop="13dp"
            android:layout_toRightOf="@id/ivCommentImageTextPostItem"
            android:text="0"
            android:textColor="?attr/lichtgreytextcolor" />

        <TextView
            android:id="@+id/tvKeyHiddenTextPostItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="key"
            android:textColor="#00FFFFFF"
            android:textSize="1sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.02" />

        <TextView
            android:id="@+id/tvPostDateTextPostItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_toRightOf="@id/tvStreepjeTextPostItem"
            android:layout_weight="1"
            android:text="Date"
            android:textColor="?attr/lichtgreytextcolor"
            android:textSize="13sp" />

        <ImageButton
            android:id="@+id/ibDeleteIconTextPostItem"
            android:layout_width="34dp"
            android:layout_height="38dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="0dp"
            android:background="#00FFFFFF"
            android:paddingLeft="17dp"
            android:paddingTop="10dp"
            android:paddingRight="15dp"
            android:paddingBottom="8.5dp"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/ic_more_vert_grey_24dp" />

        <ImageView
            android:id="@+id/ivCommentImageTextPostItem"
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvContentTextPostItem"
            android:layout_marginStart="50dp"
            android:layout_marginTop="13dp"
            android:layout_toRightOf="@id/tvDislikeCounterTextPostItem"
            app:srcCompat="@drawable/ic_mode_comment_black_24dp" />

        <TextView
            android:id="@+id/tvContentTextPostItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/ivImagePostItem"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="20dp"
            android:ellipsize="marquee"
            android:maxLength="150"
            android:maxLines="3"
            android:text="Content"
            android:textColor="?attr/lichtlichtgreytextcolor"
            android:textSize="13sp" />

        <ImageView
            android:id="@+id/ivImagePostItem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvTitleTextPostItem"
            android:layout_marginBottom="5dp"
            android:adjustViewBounds="true"
            android:maxHeight="400dp"
            android:scaleType="centerCrop"
            tools:srcCompat="@tools:sample/avatars" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>