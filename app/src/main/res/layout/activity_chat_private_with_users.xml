<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Chatroom.ChatPrivateWithUsers"
    android:background="?attr/backgroundcolor">

    <ImageButton
        android:id="@+id/ibSendMessageChatPrivate"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:src="@drawable/ic_send_black_24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/ibSendImageChatPrivate"
        app:layout_constraintStart_toEndOf="@+id/etChatInputPrivate"
        app:layout_constraintTop_toBottomOf="@+id/rvChatWindowPrivate" />

    <ImageButton
        android:id="@+id/ibSendImageChatPrivate"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:src="@drawable/ic_camera_alt_black_24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/ibSendMessageChatPrivate"
        app:layout_constraintTop_toBottomOf="@id/rvChatWindowPrivate" />

    <EditText
        android:id="@+id/etChatInputPrivate"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="4dp"
        android:ems="10"
        android:inputType="textCapSentences"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btnSendMessageChat"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/ibSendMessageChatPrivate" />


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvChatWindowPrivate"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scrollbars="vertical"
        app:layout_constraintBottom_toTopOf="@+id/ibSendMessageChatPrivate"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>