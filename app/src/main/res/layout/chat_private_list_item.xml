<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="3dp"
    android:layout_marginBottom="2dp"
    android:background="?attr/mainbackground">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/mainbackground">

        <TextView
            android:id="@+id/tvUsernameToChatWith"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_alignTop="@+id/ivProfilePictureChatList"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="10dp"
            android:layout_toRightOf="@+id/ivProfilePictureChatList"
            android:layout_weight="1"
            android:text="[Username]"
            android:textAllCaps="false"
            android:textColor="?attr/maintextcolor"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/ivProfilePictureChatList"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="15dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="15dp"
            android:background="@drawable/imageview_profilepicture_edge" />

        <TextView
            android:id="@+id/tvLastMessagePrivateChat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvUsernameToChatWith"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@+id/ivProfilePictureChatList"
            android:text="Last message will be shown here"
            android:textColor="?attr/lichtgreytextcolor"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tvTimeOfLastMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvUsernameToChatWith"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="8dp"
            android:text="00:00"
            android:textColor="?attr/lichtgreytextcolor"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tvLastSeenPrivateChat"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_below="@id/tvLastMessagePrivateChat"
            android:layout_alignLeft="@id/tvLastMessagePrivateChat"
            android:text="Last seen: 15:20"
            android:gravity="center"
            android:textColor="?attr/lichtgreytextcolor"
            android:textSize="14sp" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>